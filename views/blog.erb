<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h2>Add new post</h2>
      <form action="/post_submit" method="post">
        <div class="form-group">
          <select id="contributor" class="form-control">
            <option val="Jerrelle">Jerrelle</option>
            <option val="Kirk">Kirk</option>
            <option val="Matt">Matt</option>
          </select>
        </div>
        <div class="form-group">
          <input type="text" class="form-control" name="post_title" id="post_title" placeholder="Enter title here">
        </div>
        <div class="form-group">
          <textarea rows="10" class="form-control" name="post_content" id="post_content"></textarea>
        </div>
        <button class="btn btn-default">Submit</button>
      </form>
    </div>
  </div>
</div>
